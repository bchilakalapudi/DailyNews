<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context=".Activity_Topic_Details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/topicdetails_adView_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            app:adSize="BANNER"
            app:adUnitId="@string/DailyNews_Banner_Top" />

        <ImageView
            android:id="@+id/topic_details_imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@android:drawable/alert_light_frame" />

        <TextView
            android:id="@+id/topic_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="TextView"
            android:textColor="#E91E63"
            android:textSize="18dp" />

        <FrameLayout
            android:id="@+id/topicdetails_ad_native"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" >

        </FrameLayout>

        <TextView
            android:id="@+id/topicdetails_pubdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/topic_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="TextView"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/topic_details_readmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="TextView"
            android:textColor="#FF9800"
            android:textColorLink="#FF9800"
            android:textSize="18dp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/topicdetails_adView_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:layout_weight="1"
            app:adSize="BANNER"
            app:adUnitId="@string/DailyNews_Banner_Bottom" />

    </LinearLayout>
</ScrollView>